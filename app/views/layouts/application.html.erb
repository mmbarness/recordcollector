<!DOCTYPE html>
<html>
  <head>
    <title>record collector</title>
    <%= csrf_meta_tags %>
    <%= console%>
    <%if current_user%>
      <script>
        window.currentUser = {
          "id": <%=current_user.id%>,
          "username": "<%=current_user.username%>",
          "email": "<%=current_user.email%>"
        }
      </script>
    <%end%>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
